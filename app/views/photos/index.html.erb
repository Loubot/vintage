<h1>Painting Gallery</h1>
<div class="row">
  <div class="col-xs-6 col-md-3">
		
		  <%= render @photos %>
		
	</div>
</div>
<div class="clear"></div>

<%= @item.name %><br>

<%= form_for Photo.new do |f| %>
  <%= f.label :avatar, "Upload paintings:" %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.file_field :avatar, multiple: true, name: "photo[avatar]" %>
<% end %>

<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress"><div class="bar" style="width: 25%"></div></div>
</div>
</script>


