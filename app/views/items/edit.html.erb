<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">You can edit your item here <small>yada</small></h3>
        </div>
          <div class="panel-body">

              <%= form_for @item , html: { role: 'form', multipart: true } do |f| %>
                <div class="col-xs-11 col-sm-11 col-md-11">
                  <div class="form-group">
                      <%= f.text_field :shop_id, class: "form-control input-sm", :placeholder => 'shop_id' %>
                  </div>
                </div>
                <div class="col-xs-11 col-sm-11 col-md-11">
                  <div class="form-group">
                      <%= f.text_field :name, class: "form-control input-sm", :placeholder => 'Item Name' %>
                  </div>
                </div>
                <div class="col-xs-11 col-sm-11 col-md-11">
                  <div class="form-group">
                      <%= f.select :size, (4..32).step(0.5).to_a %>
                  </div>
                </div>                
                <div class="col-xs-11 col-sm-11 col-md-11">
                  <div class="form-group">
                      <%= f.text_area :description, class: "form-control input-sm", :placeholder => 'Description of your item' %>
                  </div>
                </div>
                <div class="col-xs-11 col-sm-11 col-md-11">
                  <div class="form-group">
                      <%= f.number_field :price, class: "form-control input-sm", :placeholder => 'How much?' %>
                  </div>
                </div>
                <!-- <div class="col-xs-11 col-sm-11 col-md-11">
                  <div class="form-group">
                      <%= f.fields_for :photos do |photo| %>
                        <%= photo.label :avatar %>
                        <%= photo.file_field :avatar, multiple: true, name: "photos[avatar][]" %>
                      <% end %>
                  </div>
                </div>     -->                   
                <%= f.submit 'Create shop', class: 'btn btn-primary shop-signup-submit' %>
              <% end %>

          </div>
            </div>
          </div>
      </div>
</div> <!-- end of container -->
<div class="uploaded_photos">
  <div class="row">
   
      
        <%= render @photos %>
      
    
  </div>
</div>
<div class="clear"></div>


<%= form_for Photo.new do |f| %>
  <%= f.label :avatar, "Upload photos:" %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.file_field :avatar, multiple: true, name: "photo[avatar]" %>
<% end %>



<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress progress-striped">
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
    
  </div>
</div>
</div>
</script>






